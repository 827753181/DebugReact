{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "removeComments": false,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "outDir": "lib",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "baseUrl": ".",
    "rootDir": ".",
    "jsx": "preserve",
    "jsxFactory": "Taro.createElement",
    "allowJs": true,
    "resolveJsonModule": true,
    "typeRoots": ["node_modules/@types", "global.d.ts"],
    "paths": {
      "react/*": ["./src/react/packages/react/*"],
      "react-dom/*": ["./src/react/packages/react-dom/*"],
      "legacy-events/*": ["./src/react/packages/legacy-events/*"],
      "shared/*": ["./src/react/packages/shared/*"],
      "react-reconciler/*": ["./src/react/packages/react-reconciler/*"],
      "react-events/*": ["./src/react/packages/events/*"],
      "scheduler/*": ["./src/react/packages/scheduler/*"]
    }
  },
  "exclude": ["node_modules", "dist"],
  "compileOnSave": false
}
